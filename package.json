{
  "name": "@eurosport/web-toolkit",
  "version": "0.13.0",
  "description": "Eurosport Web Toolkit",
  "main": "dist/index.js",
  "scripts": {
    "test": "npm run test:ci -- --watch",
    "test:ci": "jest",
    "test:visual": "STORYBOOK_OVERRIDE_BG=true eyes-storybook",
    "cypress": "cypress run",
    "cypress:open": "cypress open",
    "build": "webpack",
    "lint": "eslint .",
    "prettier": "prettier --write '**/{*.{js?(on),ts,y?(a)ml,graphql,md,scss},.*.y?(a)ml,.*.json,.prettierrc,.stylelintrc}'",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "start-static-storybook": "serve ./storybook-static",
    "prepublish": "npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EurosportDigital/web-toolkit.git"
  },
  "author": "Eurosport Web Team",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/EurosportDigital/web-toolkit/issues"
  },
  "homepage": "https://github.com/EurosportDigital/web-toolkit#readme",
  "devDependencies": {
    "@applitools/eyes.storybook": "^2.3.13",
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.5",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/preset-env": "^7.1.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@storybook/addon-actions": "^4.0.6",
    "@storybook/addon-backgrounds": "^4.0.6",
    "@storybook/addon-info": "^4.0.6",
    "@storybook/addon-knobs": "^4.0.6",
    "@storybook/addon-links": "^4.0.6",
    "@storybook/addon-options": "^4.0.6",
    "@storybook/addon-viewport": "^4.0.7",
    "@storybook/addons": "^4.0.6",
    "@storybook/react": "^4.0.6",
    "@svgr/webpack": "^4.0.3",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-emotion": "^9.2.11",
    "babel-plugin-named-asset-import": "^0.2.3",
    "cypress": "^3.2.0",
    "emotion": "^9.2.12",
    "emotion-theming": "^9.2.9",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "enzyme-to-json": "^3.3.4",
    "eslint": "5.6.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.1.4",
    "jest": "^23.6.0",
    "jest-emotion": "^9.2.11",
    "lint-staged": "^8.0.5",
    "polished": "^2.3.0",
    "prettier": "^1.15.2",
    "pretty-quick": "^1.8.0",
    "prop-types": "^15.6.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-emotion": "^9.2.12",
    "serve": "^11.0.0",
    "wait-on": "^3.2.0",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2"
  },
  "peerDependencies": {
    "emotion": "9",
    "emotion-theming": "9",
    "polished": "2",
    "prop-types": "15",
    "react": "16",
    "react-emotion": "9"
  },
  "dependencies": {
    "lodash": "^4.17.11",
    "react-lines-ellipsis": "^0.14.0"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/testSetup.js",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      "^(?!.*\\.(js|json)$)": "<rootDir>/config/jest/fileTransform.js"
    }
  }
}
